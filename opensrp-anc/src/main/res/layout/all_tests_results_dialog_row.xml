<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_tests_results_dialog_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@color/light_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_tests_ga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingStart="5dp"
        android:paddingTop="@dimen/contact_drawable_padding"
        android:paddingEnd="@dimen/contact_drawable_padding"
        android:paddingBottom="5dp"
        android:text="GA"
        android:textAlignment="gravity"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/black_text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/all_tests_dates"
        app:layout_constraintTop_toTopOf="@+id/view_divider" />

    <TextView
        android:id="@+id/all_tests_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingTop="@dimen/contact_drawable_padding"
        android:paddingEnd="@dimen/contact_drawable_padding"
        android:paddingBottom="5dp"
        android:text="DATE"
        android:textAlignment="gravity"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/black_text_color"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/all_tests_ga"
        app:layout_constraintRight_toRightOf="@+id/all_tests_result"
        app:layout_constraintTop_toTopOf="@+id/view_divider" />

    <TextView
        android:id="@+id/all_tests_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingTop="@dimen/contact_drawable_padding"
        android:paddingEnd="@dimen/contact_drawable_padding"
        android:paddingBottom="5dp"
        android:text="VALUE"
        android:textAlignment="gravity"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/black_text_color"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/all_tests_dates"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>